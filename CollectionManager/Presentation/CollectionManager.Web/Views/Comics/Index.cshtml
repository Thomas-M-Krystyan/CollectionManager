@using CollectionManager.SQLServer.Entities.Collectibles

@model IEnumerable<ComicEntity>

@{
    ViewData["Title"] = "Index";
}

<h1>Comic books & graphic novels</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Series)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Issues)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Published)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOwned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (ComicEntity comic in Model)
        {
        <tr>
            @* Model properties *@
            <td>
                @Html.DisplayFor(modelItem => comic.Series)
            </td>
            <td>
                @Html.DisplayFor(modelItem => comic.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => comic.Volume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => comic.Issues)
            </td>
            <td>
                @Html.DisplayFor(modelItem => comic.Published)
            </td>
            <td>
                @Html.DisplayFor(modelItem => comic.IsOwned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => comic.Notes)
            </td>

            @* Operations *@
            <td>
                <a asp-action="Edit" asp-route-id="@comic.Id" class="btn btn-secondary btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@comic.Id" class="btn btn-secondary btn-sm">Details</a>
                <a asp-action="Delete" asp-route-id="@comic.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>